{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowCloudFrontOACReadOnly",
            "Effect": "Allow",
            "Principal": { "Service": "cloudfront.amazonaws.com" },
            "Action": "s3:GetObject",
            "Resource": "${bucket_arn}/*",
            "Condition": {
                "StringEquals": {
                "AWS:SourceArn": "arn:${partition}:cloudfront::${account_id}:distribution/${distribution_id}"
                }
            }
        }
    ]
}
